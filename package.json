{
  "name": "claude-historian-mcp",
  "version": "1.0.3",
  "description": "an MCP server for Claude Code conversation history ",
  "type": "module",
  "bin": {
    "claude-historian-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run lint && npm run format:check",
    "test": "node dist/index.js --help && npm run type-check",
    "prepare": "husky || true"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "optionalDependencies": {
    "level": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "mcp-server",
    "history",
    "search",
    "conversation",
    "ai",
    "terminal",
    "cli",
    "npx",
    "zero-install",
    "anthropic",
    "llm",
    "developer-tools",
    "productivity"
  ],
  "author": "Claude Code Community",
  "license": "MIT",
  "homepage": "https://github.com/Vvkmnn/claude-historian-mcp#readme",
  "bugs": {
    "url": "https://github.com/Vvkmnn/claude-historian-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vvkmnn/claude-historian-mcp.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Vvkmnn"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
